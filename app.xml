	<ModulePrefs title="Hangout Starter">
		<Require feature="rpc" />
		<Require feature="views" />
		<Require feature="locked-domain" />
	</ModulePrefs>
	<Content type="html">
  <![CDATA[     

<html>
<head>
	<link rel="stylesheet" type="text/css" href="https://eote-hangouts-dice-roller.googlecode.com/git/css/styles.css">
</head>
<body>
	<script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>
	<div id="container">
		<div id="header">
			<h3>Edge of the Empire Dice Roller</h3>

			<div id="buttonContainer">
				<input class="button" type="button" value="Show participants!" id="showParticipants" onClick="showParticipants()"/>
				<br/>
				<input class="button die-button" type="button" value="Green" id="rollGreen" onClick="clearQty('Green')"/>
				<input type="number" value="2" id="qtyGreen" class="qty-text-box" />
				<br/>
				<input class="button die-button" type="button" value="Yellow" id="rollYellow" onClick="clearQty('Yellow')"/>
				<input type="number" value="2" id="qtyYellow" class="qty-text-box" />
				<br/>
				<input class="button die-button" type="button" value="Purple" id="rollPurple" onClick="clearQty('Purple')"/>
				<input type="number" value="2" id="qtyPurple" class="qty-text-box" />
				<br/>
				<input class="button die-button" type="button" value="Red" id="rollRed" onClick="clearQty('Red')"/>
				<input type="number" value="2" id="qtyRed" class="qty-text-box" />
				<br/>
				<input class="button die-button" type="button" value="Boost" id="rollBoost" onClick="clearQty('Boost')"/>
				<input type="number" value="1" id="qtyBoost" class="qty-text-box" />
				<br/>
				<input class="button die-button" type="button" value="Setback" id="rollSetback" onClick="clearQty('Setback')"/>
				<input type="number" value="1" id="qtySetback" class="qty-text-box" />
				<br/>
				<input class="button" type="button" value="ROLL!" id="roll" onClick="roll()"/>
				<br/>
				<input class="button" type="button" value="Clear Dice" id="clearAllQty" onClick="clearQty()"/>
				<br/>
				<input class="button" type="button" value="Clear messages" id="clearMessages" onClick="clearMessages()"/>
			</div>
			
			<div id="participantsDiv"></div>
		</div>

		<div id="content">
			<div id="outputArea">
			</div>
		</div>
	</div>
	<script src="https://eote-hangouts-dice-roller.googlecode.com/git/js/data.js"></script>
	<script src="https://eote-hangouts-dice-roller.googlecode.com/git/js/app.js"></script>
</body>
</html>
]]>
</Content>
</Module>

